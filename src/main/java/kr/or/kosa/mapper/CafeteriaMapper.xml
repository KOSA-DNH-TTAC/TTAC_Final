<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.or.kosa.dao.CafeteriaDao">

<!-- 메뉴 데이터 인서트 -->
<insert id="insertmenu" parameterType="String">
INSERT INTO CAFETERIA (UNIVERSITYCODE,MENU,MENUPRICE,DOMITORYNAME) 
VALUES(#{universitycode}, #{menu},#{menuPrice}, #{domitoryname});
</insert>

<!-- 리스트가져오기 -->
<select id="selectCafeteria" parameterType="String" resultType="kr.or.kosa.dto.Cafeteria">
SELECT MENUIDX,UNIVERSITYCODE,MENU,MENUPRICE,DOMITORYNAME 
FROM CAFETERIA 
WHERE UNIVERSITYCODE=#{universitycode}  AND DOMITORYNAME = #{domitoryname};
</select>

<!-- 메뉴삭제-->
<delete id="deleteMenu" parameterType="Integer">
	DELETE FROM CAFETERIA WHERE MENUIDX = #{menuidx};
</delete>
</mapper>





